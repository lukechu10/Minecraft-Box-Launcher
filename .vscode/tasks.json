{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build:ts-watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "isBackground": true
        },
        {
            "type": "npm",
            "script": "build:ts-build",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "isBackground": true
        }
    ]
}