{
	"private": true,
	"name": "minecraft-box-launcher",
	"version": "0.5.3",
	"description": "Open source Minecraft Java Edition launcher build with ElectronJS",
	"main": "dist/js/main/main.js",
	"scripts": {
		"start": "electron .",
		"dev": "electron . --dev",
		"start:gitpod": "electron --no-sandbox .",
		"dev:gitpod": "electron . --dev --no-sandbox",
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "run-p build:*",
		"build-watch": "run-p build-watch:*",
		"build-watch:ts": "tsc -p tsconfig.json --watch",
		"build:ts": "tsc -p tsconfig.json",
		"build-watch:pug": "pug ./src/renderer/views --watch --out ./dist/views",
		"build:pug": "pug ./src/renderer/views --out ./dist/views",
		"build:webpack": "webpack --mode=production",
		"build-watch:webpack": "webpack -w --mode=development",
		"eslint": "eslint src/ --ext .ts,.tsx",
		"eslint:fix": "eslint src/ --ext .ts,.tsx --fix",
		"pack": "electron-builder --dir",
		"pack:windows": "electron-builder --dir --windows",
		"pack:macos": "electron-builder --dir --macos",
		"dist": "electron-builder",
		"postinstall": "run-p build:*",
		"preversion": "npm run eslint"
	},
	"keywords": [
		"minecraft",
		"launcher"
	],
	"author": "lukechu10",
	"license": " GPL-3.0-or-later",
	"devDependencies": {
		"@types/bytebuffer": "^5.0.40",
		"@types/fast-html-parser": "^1.0.0",
		"@types/fs-extra": "^8.0.1",
		"@types/got": "^9.6.9",
		"@types/jquery": "^3.3.31",
		"@types/lodash": "^4.14.149",
		"@types/semantic-ui": "^2.2.7",
		"@types/uuid": "^3.4.6",
		"@types/yauzl": "^2.9.1",
		"@typescript-eslint/eslint-plugin": "^2.14.0",
		"@typescript-eslint/parser": "^2.11.0",
		"@xmcl/minecraft-launcher-core": "^1.3.2",
		"devtron": "^1.4.0",
		"electron": "^7.1.7",
		"electron-builder": "^21.2.0",
		"eslint": "^6.8.0",
		"fs-extra": "^8.1.0",
		"npm-run-all": "^4.1.5",
		"pug-cli": "^1.0.0-alpha6",
		"pug-loader": "^2.4.0",
		"ts-loader": "^6.2.1",
		"typescript": "^3.7.4",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10"
	},
	"repository": {
		"url": "https://github.com/lukechu10/Minecraft-Box-Launcher",
		"type": "git"
	},
	"dependencies": {
		"electron-debug": "^3.0.1",
		"electron-store": "^5.1.0",
		"jquery": "^3.4.1",
		"lodash": "^4.17.15",
		"tslib": "^1.10.0",
		"v8-compile-cache": "^2.1.0"
	},
	"build": {
		"appId": "launcher.box.minecraft",
		"productName": "Minecraft Box",
		"mac": {
			"category": "public.app-category.games"
		},
		"files": [
			"dist/js/main/**/*.js",
			"dist/js/universal/**/*.js",
			"dist/views/**/*",
			"dist/renderer.bundle.js",
			"src/renderer/css/*.css",
			"src/renderer/js/**/*.js"
		]
	}
}
