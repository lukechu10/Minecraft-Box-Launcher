{
	"private": true,
	"name": "minecraft-box-launcher",
	"version": "0.10.0",
	"description": "Open source Minecraft Java Edition launcher build with ElectronJS",
	"main": "dist/js/main/main.js",
	"scripts": {
		"start": "electron .",
		"dev": "electron . --dev",
		"start:gitpod": "electron --no-sandbox .",
		"dev:gitpod": "electron . --dev --no-sandbox",
		"test": "ts-mocha ./test/*.ts --color --retries 2 --exit",
		"coverage": "nyc --reporter=lcovonly --reporter=text ts-mocha ./test/*.ts --color --retries 2 --exit",
		"build": "run-p build:*",
		"build-watch": "run-p build-watch:*",
		"build-watch:ts": "tsc -p tsconfig.json --watch",
		"build:ts": "tsc -p tsconfig.json",
		"build:webpack": "webpack --color --config-name=production",
		"build-watch:webpack": "webpack -w --color --config-name=development",
		"eslint": "eslint src/ --ext .ts,.tsx",
		"eslint:fix": "eslint src/ --ext .ts,.tsx --fix",
		"pack": "electron-builder --dir",
		"pack:windows": "electron-builder --dir --windows",
		"pack:macos": "electron-builder --dir --macos",
		"dist": "electron-builder",
		"postinstall": "run-p build:*",
		"preversion": "npm run eslint",
		"madge": "madge ./src/renderer/StartupTasks.ts --webpack-config webpack.config.js  -c"
	},
	"keywords": [
		"minecraft",
		"launcher"
	],
	"author": "lukechu10",
	"license": " GPL-3.0-or-later",
	"devDependencies": {
		"@types/bytebuffer": "^5.0.40",
		"@types/chai": "^4.2.11",
		"@types/fast-html-parser": "^1.0.0",
		"@types/fs-extra": "^8.1.0",
		"@types/got": "^9.6.10",
		"@types/jquery": "^3.3.35",
		"@types/lodash": "^4.14.150",
		"@types/mocha": "^7.0.2",
		"@types/semantic-ui": "^2.2.7",
		"@types/uuid": "^7.0.2",
		"@types/yauzl": "^2.9.1",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"@xmcl/core": "^2.1.3",
		"@xmcl/nbt": "^2.0.3",
		"@xmcl/server-info": "^2.0.3",
		"@xmcl/task": "^2.1.6",
		"@xmcl/user": "^2.1.3",
		"chai": "^4.2.0",
		"coverage-istanbul-loader": "^3.0.3",
		"electron": "^8.2.3",
		"electron-builder": "^22.5.1",
		"eslint": "^6.8.0",
		"fomantic-ui": "^2.8.4",
		"fs-extra": "^9.0.0",
		"html-webpack-plugin": "^4.2.0",
		"madge": "^3.8.0",
		"mocha": "^7.1.1",
		"moment": "^2.24.0",
		"npm-run-all": "^4.1.5",
		"nyc": "^15.0.1",
		"pug-cli": "^1.0.0-alpha6",
		"pug-loader": "^2.4.0",
		"spectron": "^10.0.1",
		"ts-loader": "^7.0.1",
		"ts-mocha": "^7.0.0",
		"turbolinks": "^5.3.0-beta.1",
		"typescript": "^3.8.3",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	},
	"repository": {
		"url": "https://github.com/lukechu10/Minecraft-Box-Launcher",
		"type": "git"
	},
	"dependencies": {
		"@xmcl/client": "^2.0.5",
		"@xmcl/installer": "^2.6.8",
		"electron-debug": "^3.0.1",
		"electron-store": "^5.1.1",
		"got": "^11.0.2",
		"jquery": "^3.5.0",
		"lodash": "^4.17.15",
		"tslib": "^1.11.1",
		"uuid": "^7.0.3",
		"v8-compile-cache": "^2.1.0"
	},
	"browser": {
		"electron": false
	},
	"build": {
		"appId": "launcher.box.minecraft",
		"productName": "Minecraft Box",
		"mac": {
			"category": "public.app-category.games"
		},
		"files": [
			"dist/js/main/**/*.js",
			"dist/js/universal/**/*.js",
			"dist/views/**/*",
			"dist/*.js",
			"src/renderer/css/*.css",
			"src/renderer/assets/**/*.js",
			"semantic/dist/*.js",
			"semantic/dist/*.css",
			"semantic/dist/fonts/*.woff2"
		]
	},
	"madge": {
		"detectiveOptions": {
			"ts": {
				"skipTypeImports": true,
				"mixedImports": true
			}
		}
	}
}
