- if(loggedIn)
    #login-status-text
        i.far.fa-user
        span #{name}
        img(src=`https://minotar.net/avatar/${uuid}` alt="skin head"
            style="margin-left: 8px; width: 18px; vertical-align: middle")
    .menu
        .item(onclick="AuthenticationController.logout()") #[i.fas.fa-sign-out-alt.fa-fw] Logout
- else
    a#login-status-text(onclick="Render.showLoginModal()") Login
