.content
	.ui.grid
		.thirteen.wide.column
			p.ui.header.text-instanceName #{data.name} #[i(class=data.installed?"":"fas fa-download fa-fw" style="color: #b5cc18")]
			p.description
			| #{data.clientType || "Vanilla"} #[strong #{data.id} #{data.type}]
			| Last played: #[i #{data.lastPlayedStr}]
		.three.wide.column
			.ui.right.floated.buttons.btn-instance-actions(style="display: none;")
				- if(data.isInstalling)
					button.ui.disabled.gray Installing...
				- else if(data.installed)
					button.ui.green.button.btn-play.btn-play-install Play
				- else
					button.ui.olive.button.btn-install.btn-play-install Install
